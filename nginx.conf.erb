
worker_processes 2;

events { worker_connections 1024; }

daemon off;

error_log /dev/stderr ;

http {
    sendfile on;

    access_log /dev/stdout;

    gzip              on;
    gzip_http_version 1.1;
    gzip_proxied      any;
    gzip_min_length   500;

    # Configuration for the server
    server {
        # Running port
        listen 80;

        <% if ENV['ROOT_APP'] then %>
        location / {
            return 301 /<%= ENV['ROOT_APP'] %> ;
        }
        <% end %>

        # Proxying the connections connections
        <% for @app in @data.values.select {|v| v.has_key?( "name" ) && v.has_key?( "host" ) && v.has_key?( "port" ) } %>
        location /<%= @app['name'] %>/ {
            rewrite /<%= @app['name'] %>/(.*) /$1 break;
            proxy_pass         http://<%= @app['networksettings']['ipaddress'] %>:<%= @app['networksettings']['ports'].select {|k,v| v.is_a?(Hash)  }.keys.sort.first.gsub("_tcp","").gsub("/tcp","") %>;
            proxy_redirect     default;
            proxy_set_header   Host $host;
            proxy_set_header   X-Real-IP $remote_addr;
            proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header   X-Forwarded-Host $server_name;
        }
        <% end %>
    }
}


